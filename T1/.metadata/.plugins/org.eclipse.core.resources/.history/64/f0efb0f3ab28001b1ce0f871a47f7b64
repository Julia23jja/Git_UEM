package ejer15;

import java.util.Scanner;

public class CompañiaTelefonica {
	static final double IMPUESTO = 0.3;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Introduce la duración de la llamada");
		double duracion = Double.parseDouble(sc.nextLine());
		
		System.out.println("Introduce el día que realizó la llamada");
		String dia = sc.nextLine();
		
		System.out.println("Introduce cuándo se realizó la llamada");
		String turno = sc.nextLine();
		
		double coste = 0;
		double impuesto;
		String domingo = null;
		String mañana = null;
		String tarde = null;
		
		if (duracion == 5) {
			coste = duracion * 1;
		} else if (duracion == 8) {
			coste = duracion * 0.8;
		} else if (duracion == 10) {
			coste = duracion * 0.70;
		} else if (duracion > 10) {
			coste = duracion * 0.50;
		}
		
		if (dia.equals(domingo)) {
			impuesto = coste * IMPUESTO;
		}
		
//SIN ACABAR
		
		sc.close();

	}

}
